<?xml version="1.0" encoding="utf-8"?>
<com.example.yexin.bishe.view.TitleBar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#4f8bdd"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/tv_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:background="@drawable/tv_search_bg_seletor"
        android:clickable="true"
        android:drawableLeft="@drawable/tv_search_seletor"
        android:drawablePadding="3dp"
        android:textColor="@drawable/tv_search_textcolor_seletor"
        android:textSize="18sp" />

    <RelativeLayout
        android:id="@+id/rl_game"
        android:layout_marginLeft="5dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_topbanner_game" />

        <ImageView
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_alignRight="@id/tv_game"
            android:background="@drawable/dot" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_record"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/ic_topbanner_record" />
</com.example.yexin.bishe.view.TitleBar>
